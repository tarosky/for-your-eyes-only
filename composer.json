{
    "name": "tarosky/for-your-eyes-only",
    "description": "A restricted block only for specified users.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "TAROSKY INC",
            "email": "hi@tarosky.co.jp"
        },
        {
            "name": "Hametuha INC",
            "email": "info@hametuha.co.jp"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=phpcs.ruleset.xml $(find ./ -name '*.php')",
        "fix": "phpcbf --standard=phpcs.ruleset.xml $(find ./ -name '*.php')",
		"i18n:mo": "wp i18n make-mo languages",
		"i18n:json": "wp i18n make-json languages --no-purge",
		"i18n": [
			"@i18n:mo",
			"@i18n:json"
		],
		"i18n:pot": "wp i18n make-pot . languages/fyeo.pot --slug=fyeo --domain=fyeo --exclude=node_modules,vendor,wordpress",
		"i18n:po": "wp i18n update-po languages/fyeo.pot languages/",
		"i18n:update": [ "@i18n:pot", "@i18n:po" ]

    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "masterminds/html5": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "wp-coding-standards/wpcs": "^3.0",
        "yoast/phpunit-polyfills": "^2.0",
        "wp-cli/wp-cli-bundle": "^2.12"
    },
    "autoload": {
        "psr-0": {
            "Hametuha\\ForYourEyesOnly": "app"
        }
    },
    "config": {
		"platform": {
			"php": "7.4"
		},
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
